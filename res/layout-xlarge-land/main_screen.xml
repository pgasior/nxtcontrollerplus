<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/main"
    android1:layout_width="wrap_content"
    android1:layout_height="fill_parent"
    android1:background="@drawable/background_tile"
    android1:baselineAligned="false"
    android1:gravity="left"
    android1:orientation="horizontal"
    android1:padding="3dp"
    android1:tileMode="repeat"
    android1:weightSum="1" >

    <LinearLayout
        android1:id="@+id/leftPanel"
        android1:layout_width="0dp"
        android1:layout_height="wrap_content"
        android1:layout_weight="0.5"
        android1:gravity="left"
        android1:orientation="vertical"
        android1:paddingRight="10dp" >

        <ViewFlipper
            android1:id="@+id/flipper"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:layout_gravity="top"
            android1:inAnimation="@anim/slide_in_up"
            android1:measureAllChildren="true"
            android1:outAnimation="@anim/slide_out_up" >

            <LinearLayout
                android1:id="@+id/firstScreen"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:gravity="bottom"
                android1:orientation="vertical"
                android1:visibility="gone" android1:weightSum="1">

                <LinearLayout
                    android1:id="@+id/batteryWrapper"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content"
                    android1:layout_weight="0.2"
                    android1:orientation="vertical" android1:paddingLeft="5dp" android1:paddingBottom="5dp">

                    <TextView
                        android1:id="@+id/batteryLevelLable"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:text="@string/batteryLevel"
                        android1:textAppearance="?android:attr/textAppearanceMedium"
                        android1:textColor="@color/white" android1:textSize="16dp"/>
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/row1wrapper"
                    android1:layout_width="fill_parent"
                    android1:layout_height="wrap_content"
                    android1:gravity="center_vertical"
                    android1:orientation="horizontal"
                    android1:paddingLeft="5dp"
                    android1:weightSum="1" >

                    <TextView
                        android1:id="@+id/row1name"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.6"
                        android1:text="@string/noSensorLabel"
                        android1:textAppearance="?android:attr/textAppearanceSmall"
                        android1:textColor="@color/white" android1:textSize="14dp"/>

                    <LinearLayout
                        android1:id="@+id/view1"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.4"
                        android1:orientation="vertical"
                        android1:paddingLeft="5dp" >

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/row2wrapper"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent"
                    android1:layout_weight="0.2"
                    android1:gravity="center_vertical"
                    android1:orientation="horizontal"
                    android1:paddingLeft="5dp" >

                    <TextView
                        android1:id="@+id/row2name"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.6"
                        android1:paddingRight="5dp"
                        android1:text="@string/noSensorLabel"
                        android1:textAppearance="?android:attr/textAppearanceSmall"
                        android1:textColor="@color/white" android1:textSize="14dp"/>

                    <LinearLayout
                        android1:id="@+id/view2"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.4"
                        android1:gravity="center_vertical"
                        android1:orientation="vertical"
                        android1:paddingLeft="5dp" >

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/row3wrapper"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent"
                    android1:layout_weight="0.2"
                    android1:gravity="center_vertical"
                    android1:orientation="horizontal"
                    android1:paddingLeft="5dp" >

                    <TextView
                        android1:id="@+id/row3name"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.6"
                        android1:paddingRight="5dp"
                        android1:text="@string/noSensorLabel"
                        android1:textAppearance="?android:attr/textAppearanceSmall"
                        android1:textColor="@color/white" android1:textSize="14dp"/>

                    <LinearLayout
                        android1:id="@+id/view3"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.4"
                        android1:gravity="center_vertical"
                        android1:orientation="vertical"
                        android1:paddingLeft="5dp" >

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/row4wrapper"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent"
                    android1:layout_weight="0.2"
                    android1:gravity="center_vertical"
                    android1:orientation="horizontal"
                    android1:paddingLeft="5dp" android1:weightSum="1">

                    <TextView
                        android1:id="@+id/row4name"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.6"
                        android1:paddingRight="5dp"
                        android1:text="@string/noSensorLabel"
                        android1:textAppearance="?android:attr/textAppearanceSmall"
                        android1:textColor="@color/white" android1:textSize="14dp"/>

                    <LinearLayout
                        android1:id="@+id/view4"
                        android1:layout_width="0dp"
                        android1:layout_height="50dp"
                        android1:layout_weight="0.4"
                        android1:gravity="center_vertical"
                        android1:orientation="vertical"
                        android1:paddingLeft="5dp" >

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/secondScreen"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:gravity="bottom"
                android1:paddingBottom="10dp"
                android1:visibility="visible" android1:weightSum="1">

                <LinearLayout
                    android1:id="@+id/radarWrapper"
                    android1:layout_width="0dp"
                    android1:layout_height="wrap_content"
                    android1:gravity="bottom|left"
                    android1:orientation="vertical"
                    android1:paddingLeft="5dp" android1:layout_weight="0.7">

                    <TextView
                        android1:id="@+id/angleLabel"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:text="@string/angleText"
                        android1:textAppearance="?android:attr/textAppearanceSmall"
                        android1:textColor="@color/white" />

                    <TextView
                        android1:id="@+id/distanceLabel"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:text="@string/distanceText"
                        android1:textAppearance="?android:attr/textAppearanceSmall"
                        android1:textColor="@color/white" />

                    <nxtcontroller.program.views.UltrasonicSensorView
                        android1:id="@+id/ultrasonicSensorView"
                        android1:layout_width="215dp"
                        android1:layout_height="215dp" />

                    <LinearLayout
                        android1:id="@+id/seekBarWrap"
                        android1:layout_width="match_parent"
                        android1:layout_height="wrap_content"
                        android1:orientation="vertical"
                        android1:paddingBottom="5dp"
                        android1:paddingRight="5dp"
                        android1:paddingTop="20dp" >

                        <SeekBar
                            android1:id="@+id/thirdMotorSeekBar"
                            android1:layout_width="match_parent"
                            android1:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android1:id="@+id/compassWrapper"
                    android1:layout_width="0dp"
                    android1:layout_height="wrap_content"
                    android1:gravity="bottom|center"
                    android1:orientation="vertical" android1:layout_weight="0.3">

                    <nxtcontroller.program.views.CompassSensorView
                        android1:id="@+id/compassSensorView"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content" />

                    <TextView
                        android1:id="@+id/azimutLabel"
                        android1:layout_width="wrap_content"
                        android1:layout_height="wrap_content"
                        android1:paddingBottom="2dp"
                        android1:paddingTop="2dp"
                        android1:text="@string/azimuthText"
                        android1:textAppearance="?android:attr/textAppearanceSmall"
                        android1:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </ViewFlipper>
    </LinearLayout>

    <RelativeLayout
        android1:id="@+id/rightPanel"
        android1:layout_width="0dp"
        android1:layout_height="wrap_content"
        android1:layout_weight="0.5"
        android1:gravity="right"
        android1:paddingLeft="10dp" >

        <LinearLayout
            android1:id="@+id/controlsWrap"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:gravity="left|right"
            android1:orientation="horizontal"
            android1:weightSum="1" >

            <LinearLayout
                android1:id="@+id/controls"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_weight="0.6"
                android1:gravity="left"
                android1:orientation="vertical"
                android1:paddingRight="10dp" >

                <TextView
                    android1:id="@+id/statusLabel"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/app_name"
                    android1:textColor="@color/deepBlue"
                    android1:textSize="15dp" />

                <TextView
                    android1:id="@+id/deviceName"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/selectDevice"
                    android1:textColor="@color/textBlack"
                    android1:textSize="12dp" />

                <TextView
                    android1:id="@+id/controlModeLabel"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@android:string/untitled"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="@color/deepBlue" />
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/buttons"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_weight="0.4"
                android1:orientation="vertical" >

                <Button
                    android1:id="@+id/disconnectButton"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/disconnectNXT"
                    android1:visibility="gone" />

                <Button
                    android1:id="@+id/connectButton"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/connectNXT"
                    android1:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android1:id="@+id/controlPadWrapper"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_below="@+id/controlsWrap"
            android1:orientation="vertical" >

            <nxtcontroller.program.views.ControlPad
                android1:id="@+id/controlPadView"
                android1:layout_width="250dp"
                android1:layout_height="250dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
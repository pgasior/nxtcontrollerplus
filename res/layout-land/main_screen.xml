<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/main"
    android1:layout_width="fill_parent"
    android1:layout_height="fill_parent"
    android1:background="@drawable/bg"
    android1:baselineAligned="false"
    android1:gravity="left"
    android1:orientation="horizontal"
    android1:paddingTop="3dp" >

    <ViewFlipper
        android1:id="@+id/flipper"
        android1:layout_width="300dp"
        android1:layout_height="match_parent"
        android1:layout_gravity="top"
        android1:inAnimation="@anim/slide_in_up"
        android1:measureAllChildren="true"
        android1:outAnimation="@anim/slide_out_up" >

        <LinearLayout
            android1:id="@+id/firstScreen"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:gravity="bottom"
            android1:orientation="vertical" >

            <LinearLayout
                android1:id="@+id/batteryWrapper"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:orientation="vertical"
                android1:paddingLeft="5dp" >

                <TextView
                    android1:id="@+id/batteryLevelLable"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/batteryLevel"
                    android1:textAppearance="?android:attr/textAppearanceMedium"
                    android1:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/row1wrapper"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:gravity="center_vertical"
                android1:orientation="horizontal"
                android1:paddingLeft="5dp" >

                <TextView
                    android1:id="@+id/row1name"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/noSensorLabel"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="@color/white" />

                <LinearLayout
                    android1:id="@+id/view1"
                    android1:layout_width="160px"
                    android1:layout_height="80px"
                    android1:orientation="vertical" android1:paddingLeft="5dp">
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/row2wrapper"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:gravity="center_vertical"
                android1:orientation="horizontal"
                android1:paddingLeft="5dp" >

                <TextView
                    android1:id="@+id/row2name"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:paddingRight="5dp"
                    android1:text="@string/noSensorLabel"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="@color/white" />

                <LinearLayout
                    android1:id="@+id/view2"
                    android1:layout_width="200px"
                    android1:layout_height="80px"
                    android1:gravity="center_vertical"
                    android1:orientation="vertical"
                    android1:paddingLeft="5dp" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/row3wrapper"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:gravity="center_vertical"
                android1:orientation="horizontal"
                android1:paddingLeft="5dp" >

                <TextView
                    android1:id="@+id/row3name"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:paddingRight="5dp"
                    android1:text="@string/noSensorLabel"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="@color/white" />

                <LinearLayout
                    android1:id="@+id/view3"
                    android1:layout_width="200px"
                    android1:layout_height="80px"
                    android1:gravity="center_vertical"
                    android1:orientation="vertical"
                    android1:paddingLeft="5dp" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/row4wrapper"
                android1:layout_width="match_parent"
                android1:layout_height="match_parent"
                android1:gravity="center_vertical"
                android1:orientation="horizontal"
                android1:paddingLeft="5dp" >

                <TextView
                    android1:id="@+id/row4name"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:paddingRight="5dp"
                    android1:text="@string/noSensorLabel"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="@color/white" />

                <LinearLayout
                    android1:id="@+id/view4"
                    android1:layout_width="200px"
                    android1:layout_height="80px"
                    android1:gravity="center_vertical"
                    android1:orientation="vertical"
                    android1:paddingLeft="5dp" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/seekBarWrap"
                android1:layout_width="250dp"
                android1:layout_height="wrap_content"
                android1:orientation="vertical"
                android1:paddingBottom="5dp"
                android1:paddingLeft="5dp"
                android1:paddingRight="5dp"
                android1:paddingTop="10dp" >

                <SeekBar
                    android1:id="@+id/thirdMotorSeekBar"
                    android1:layout_width="match_parent"
                    android1:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android1:id="@+id/secondScreen"
            android1:layout_width="match_parent"
            android1:layout_height="match_parent" >

            <Button
                android1:id="@+id/button1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="Button" />
        </LinearLayout>
    </ViewFlipper>

    <LinearLayout
        android1:id="@+id/rightPanel"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_gravity="bottom"
        android1:layout_weight="0.18"
        android1:gravity="center|right"
        android1:orientation="vertical" >

        <LinearLayout
            android1:id="@+id/controlsWrap"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:gravity="right"
            android1:orientation="horizontal" >

            <LinearLayout
                android1:id="@+id/controls"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:layout_gravity="center_horizontal"
                android1:gravity="center_horizontal|center_vertical|left|right"
                android1:orientation="vertical" >

                <TextView
                    android1:id="@+id/statusLabel"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/app_name"
                    android1:textColor="@color/deepBlue"
                    android1:textSize="15dp" />

                <TextView
                    android1:id="@+id/deviceName"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@string/selectDevice"
                    android1:textColor="@color/textBlack"
                    android1:textSize="12dp" />

                <TextView
                    android1:id="@+id/controlModeLabel"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:text="@android:string/untitled"
                    android1:textAppearance="?android:attr/textAppearanceSmall"
                    android1:textColor="@color/deepBlue" />
            </LinearLayout>

            <Button
                android1:id="@+id/disconnectButton"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="@string/disconnectNXT"
                android1:visibility="gone" />

            <Button
                android1:id="@+id/connectButton"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="@string/connectNXT" />
        </LinearLayout>

        <nxtcontroller.program.views.ControlPad
            android1:id="@+id/controlPadView"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/main"
    android1:layout_width="fill_parent"
    android1:layout_height="fill_parent"
    android1:background="@drawable/background"
    android1:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android1:gravity="top"
        android1:padding="10dp" >

        <LinearLayout
            android1:id="@+id/labels"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentLeft="true"
            android1:layout_alignParentTop="true"
            android1:orientation="vertical" >

            <TextView
                android1:id="@+id/statusLabel"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="@string/app_name"
                android1:textAppearance="?android:attr/textAppearanceMedium"
                android1:textColor="@color/deepBlue"
                android1:textSize="18dp" />

            <TextView
                android1:id="@+id/deviceName"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android1:text="@string/connectNXT"
                android1:textAppearance="?android:attr/textAppearanceSmall"
                android1:textColor="@color/textBlack" />
        </LinearLayout>

        <Button
            android1:id="@+id/connectButton"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignParentRight="true"
            android1:layout_alignTop="@+id/labels"
            android1:text="@string/connectNXT" />
    </RelativeLayout>

    <nxtcontroller.program.ControlPad
        android1:id="@+id/controlPadView"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content" />

</LinearLayout>